<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jodboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.brian.thejodboard.JODBOARD">

    <Button
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/yes" />

    <Button
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yuppa"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:id="@+id/no" />

    <Button
        android:text="Bad at Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/badatgame"
        android:layout_alignBaseline="@+id/no"
        android:layout_alignBottom="@+id/no"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/badatgame"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/easy" />

    <Button
        android:text="Serious?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/serious"
        android:layout_below="@+id/no"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Deaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shutup"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/deaf" />

    <Button
        android:text="No Problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noproblem"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/badatgame"
        android:layout_alignEnd="@+id/badatgame" />

    <Button
        android:text="Yuppa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yuppa"
        android:layout_alignBaseline="@+id/noproblem"
        android:layout_alignBottom="@+id/noproblem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Fak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fak"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7782595921638487/5212342972"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">
    </com.google.android.gms.ads.AdView>

    <Button
        android:text="Shut Up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shutup"
        android:layout_above="@+id/adView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />

    <Button
        android:text="Bellend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bellend"
        android:layout_alignBaseline="@+id/deaf"
        android:layout_alignBottom="@+id/deaf"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:srcCompat="@drawable/jodface"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/serious"
        android:layout_alignRight="@+id/bellend"
        android:layout_alignEnd="@+id/bellend"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp" />
</RelativeLayout>
